generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Like {
  id        String   @id @default(cuid())
  slug      String   @unique
  count     Int      @default(0)
  updatedAt DateTime @updatedAt
}

model View {
  id        String   @id @default(cuid())
  slug      String   @unique
  count     Int      @default(0)
  updatedAt DateTime @updatedAt
}

model Comment {
  id        String   @id @default(cuid())
  slug      String
  name      String
  text      String
  createdAt DateTime @default(now())
  ip        String?
  honeypot  String?  @default("")

  @@index([slug])
}